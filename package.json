{
  "name": "thee-cigar-maestro",
  "version": "1.0.0",
  "type": "module",
  "description": "A sophisticated web application for cigar enthusiasts featuring interactive 3D visualization, educational content, and AI-powered recommendations",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "http-server . -p 8000 -c-1",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run test",
    "analyze": "npx vite-bundle-analyzer",
    "lighthouse": "lighthouse http://localhost:8000 --output=html --output-path=./lighthouse-report.html",
    "audit": "node validate-data.js && node integration-test.js",
    "optimize": "node scripts/optimize-logo.js && node optimize-assets.js",
    "performance": "npm run build && node scripts/performance-test.js",
    "pwa-validate": "npm run build && node scripts/pwa-validator.js",
    "pwa-enhance": "node scripts/pwa-enhancer.js"
  },
  "keywords": [
    "cigar",
    "3d-visualization",
    "ai-assistant",
    "education",
    "pwa",
    "threejs"
  ],
  "author": "Mike Hamilton",
  "license": "MIT",
  "devDependencies": {
    "@types/three": "^0.178.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "http-server": "^14.1.1",
    "lighthouse": "^12.8.0",
    "prettier": "^3.1.1",
    "sharp": "^0.34.3",
    "vite": "^7.0.6",
    "vite-bundle-analyzer": "^1.1.0",
    "vite-plugin-pwa": "^1.0.2",
    "vitest": "^3.2.4",
    "workbox-window": "^7.0.0"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "three": "^0.178.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
